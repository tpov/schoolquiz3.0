<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"/>
            <gradient
                android:angle="-90"
                android:startColor="#B3324755"
                android:centerColor="#CC2D3E50"
                android:endColor="#283547"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:gravity="bottom"
        android:height="25dp">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"/>
            <gradient
                android:angle="-90"
                android:startColor="#00262D33"
                android:endColor="#3E5065"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
