<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/back_main_top</item>
    </style>

    <!-- styles.xml -->
    <style name="DialogAnimationCreateQuestion">
        <item name="android:windowEnterAnimation">@anim/slide_in_horizontal</item>
        <item name="android:windowExitAnimation">@anim/slide_out_vertical</item>
    </style>

    <style name="BottomRoundedShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
    </style>


    <!-- Для CardView -->
    <style name="ShopCardViewStyle">
        <item name="cardBackgroundColor">@color/back_item</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Для LinearLayout -->
    <style name="ShopLinearLayoutStyle">
        <item name="android:padding">11dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Для ImageView -->
    <style name="ShopImageViewStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <!-- Для TextView -->
    <style name="ShopTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Для Button -->
    <style name="ShopButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#FFC107</item>
    </style>

</resources>
