<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/back_main_top</item>
    </style>

    <!-- styles.xml -->
    <style name="DialogAnimationCreateQuestion">
        <item name="android:windowEnterAnimation">@anim/slide_in_horizontal</item>
        <item name="android:windowExitAnimation">@anim/slide_out_vertical</item>
    </style>

    <style name="BottomRoundedShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
    </style>





</resources>
