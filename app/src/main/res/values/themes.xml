<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoQuiz" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <!-- Secondary brand color. -->

        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/design3_main_end</item> //Цвет статуса бара
        <item name="android:colorAccent">#FFFFFF</item>    //текст
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlHighlight">#66FF0000</item> //Волновой єффект єлемента меню
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:colorPrimaryDark">#FFFFFF</item>
        <item name="android:colorPrimary">#FFFFFF</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:colorControlActivated">@color/ratingBar</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>
    <style name="RatingBarFavorite" parent="Theme.AppCompat">
        <item name="android:colorControlActivated">#FF0000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="colorControlNormal">#737373</item>
    </style>
    <style name="RatingBarFavoriteGold" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@drawable/rating_full</item>
        <item name="android:indeterminateDrawable">@drawable/rating_full</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="colorControlNormal">@color/design3_main_end</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Стиль текста в терминале -->
    <style name="TerminalText">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Стиль фона в терминале -->
    <style name="TerminalBackground">
        <item name="android:background">#000000</item>
    </style>
</resources>