<resources>
    <!-- Base application theme. -->
    <style name="Theme.Schoolquiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:colorControlActivated">@color/gold</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>
    <style name="RatingBarFavorite" parent="Theme.AppCompat">
        <item name="android:colorControlActivated">#FF0000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="colorControlNormal">#737373</item>
    </style>
    <style name="RatingBarFavoriteGold" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@drawable/rating_full</item>
        <item name="android:indeterminateDrawable">@drawable/rating_full</item>
    </style>
</resources>